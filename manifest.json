{
  "name": "Ashtro-SR",
  "description": "This app records your screen",
  "version": "0.2.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "favicon.png"
  },
  "icons": {
    "128": "favicon.png"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "desktopCapture",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
